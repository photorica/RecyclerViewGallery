<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_size"
    android:layout_height="@dimen/item_size"
    android:padding="@dimen/item_padding">

    <!-- サムネイル -->
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_thumbnail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- 表示名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_description_height"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/item_description_padding"
        android:background="@color/colorClearBlack">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_name_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"/>

    </LinearLayout>

</RelativeLayout>
